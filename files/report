#!/bin/bash
# BD System Report

echo -e "\033[1;96m"
echo "╔══════════════════════════════════════╗"
echo "║           SYSTEM REPORT              ║"
echo "╚══════════════════════════════════════╝"
echo -e "\033[0m"

echo -e "\033[1;93m[*] Device Information:\033[0m"
echo -e "Model: $(getprop ro.product.model 2>/dev/null || echo 'Unknown')"
echo -e "Manufacturer: $(getprop ro.product.manufacturer 2>/dev/null || echo 'Unknown')"
echo -e "Android: $(getprop ro.build.version.release 2>/dev/null || echo 'Unknown')"

echo -e "\n\033[1;93m[*] Storage Information:\033[0m"
df -h $HOME 2>/dev/null | awk 'NR==2{print "Used: " $3 " / " $2 " (" $5 ")"}'

echo -e "\n\033[1;93m[*] MASTER Installation:\033[0m"
if [ -f "$HOME/.termux/dx.txt" ]; then
    echo -e "Version: $(cat $HOME/.termux/dx.txt)"
else
    echo -e "Version: Not installed"
fi

echo -e "\n\033[1;92m[✓] Report generated successfully!\033[0m"
